<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplicationFirst" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:textColorPrimary">@color/teal_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="NoActionTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

    </style>

    <style name="MyActionBar" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="background">@color/teal_200</item>
    </style>

    <style name="transparentBar" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="background">@color/transparent</item>
    </style>

    <style name="Theme.MyApplicationFirst.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyApplicationFirst.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyApplicationFirst.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>